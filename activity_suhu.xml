<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".Rupiahkonversi">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:text="KONVERSI SUHU"
            android:textSize="30dp"/>

    <LinearLayout
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/konversi_suhu"
                android:layout_marginBottom="10dp"/>

        <EditText
                android:id="@+id/edt_suhu"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:inputType="numberDecimal"
                android:hint="@string/calcius"
                android:lines="1"/>

        <TextView
                android:id="@+id/tc_result1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/hasil_fahrenheit"
                android:textSize="24sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/tc_result2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/hasil_reamus"
                android:textSize="24sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/tc_result3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/hasil_kelvin"
                android:textSize="24sp"
                android:textStyle="bold" />

    </LinearLayout>

    <Button
            android:id="@+id/btn_suhu"
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:text="@string/cek_suhu" />

</LinearLayout>
